<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link rel="stylesheet" href="/css/home.css">
</head>

<body>


    <div class="content-table">
        <h1>Insert New Record</h1>
        <form>
            <label>Name</label><br>
            <input type="text" name="name" id="name" required><br>
            <label>Reps</label><br>
            <input type="number" name="reps" id="reps"><br>
            <label>Weight</label><br>
            <input type="number" name="weight" id="weight"><br>
            <label>Date</label><br>
            <input type="date" name="date" id="date"><br>
            <label>Unit</label><br>
            <input list="unit" name="unit" id="unit">
            <datalist>
                <option value="kg">
                <option value="lbs">
            </datalist>
            </input><br>
            <button type="submit" id="submit">SUBMIT</button>
        </form>
    </div>


    <br>

    <div class="content-table">
        <h1>Here's your table</h1>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Reps</th>
                    <th>Weight</th>
                    <th>Date</th>
                    <th>Unit</th>
                    <th>Delete</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>

                {{#each results}}
                <tr>
                    <td>{{this.name}}</td>
                    <td>{{this.reps}}</td>
                    <td>{{this.weight}}</td>
                    <td>{{this.date}}</td>
                    <td>{{this.unit}}</td>
                    <td><button onclick="location.href = '/delete?id={{this.id}}'">Delete</button></td>
                    <td><button
                            onclick="location.href = '/edit-form?id={{this.id}}&name={{this.name}}&reps={{this.reps}}&weight={{this.weight}}&date={{this.date}}&unit={{this.unit}}'">Edit</button>

                    </td>
                </tr>
                {{/each}}
            </tbody>

        </table>
    </div>

    <script>

        document.getElementById('submit').addEventListener('click', function (event) {
            var req = new XMLHttpRequest();
            var name = document.getElementById('name').value;
            var reps = document.getElementById('reps').value;
            var weight = document.getElementById('weight').value;
            var date = document.getElementById('date').value;
            var unit = document.getElementById('unit').value;

            console.log(name, reps, weight, date, unit)

        });




    </script>


</body>

</html>