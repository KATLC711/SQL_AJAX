<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link rel="stylesheet" href="/css/home.css">
</head>

<body>


    <div class="content-table">
        <h1>Insert New Record</h1>
        <form>
            <fieldset>
                <label>Name</label><br>
                <input type="text" name="name" id="name" required><br>
                <label>Reps</label><br>
                <input type="number" name="reps" id="reps"><br>
                <label>Weight</label><br>
                <input type="number" name="weight" id="weight"><br>
                <label>Date</label><br>
                <input type="date" name="date" id="date"><br>
                <div id="units">
                    <label>Unit</label><br>
                    <input type="radio" id="kg" name="unit" value="kg">
                    <label for="kg">kg</label>
                    <input type="radio" id="lbs" name="unit" value="lbs">
                    <label for="lbs">lbs</label><br>
                </div>
                <button type="submit">SUBMIT</button>
            </fieldset>
        </form>
    </div>


    <br>

    <div class="content-table">
        <h1>Here's your table</h1>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Reps</th>
                    <th>Weight</th>
                    <th>Date</th>
                    <th>Unit</th>
                    <th>Delete</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>

                {{#each results}}
                <tr>
                    <td>{{this.name}}</td>
                    <td>{{this.reps}}</td>
                    <td>{{this.weight}}</td>
                    <td>{{this.date}}</td>
                    <td>{{this.unit}}</td>
                    <td><button onclick="location.href = '/delete?id={{this.id}}'">Delete</button></td>
                    <td><button
                            onclick="location.href = '/edit-form?id={{this.id}}&name={{this.name}}&reps={{this.reps}}&weight={{this.weight}}&date={{this.date}}&unit={{this.unit}}'">Edit</button>

                    </td>
                </tr>
                {{/each}}
            </tbody>

        </table>
    </div>


    <script>

        document.getElementById('submit').addEventListener('click', function (event) {
            var req = new XMLHttpRequest();
            var name = document.getElementById('name').value;
            var reps = document.getElementById('reps').value;
            var weight = document.getElementById('weight').value;
            var date = document.getElementById('date').value;
            var units = document.getElementById('units').value;
            console.log(name)
            console.log('http://flip1.engr.oregonstate.edu:3636/insert?name=' + name + '&reps=' + reps + '&weight=' + weight + '&date=' + date + '&unit=' + units)
            req.open('GET', 'http://flip1.engr.oregonstate.edu:3636/insert?name=' + name + '&reps=' + reps + '&weight=' + weight + '&date=' + date + '&unit=' + units, false);
            req.addEventListener('load', function () {
                if (req.status >= 200 && req.status < 400) {
                    var response = JSON.parse(req.responseText);
                    console.log("Success!")

                } else {
                    console.log("Error in network request: " + req.statusText);
                }
            });
            req.send(null);
            event.preventDefault();
        });


    </script>

</body>

</html>